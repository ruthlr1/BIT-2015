<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_above="@+id/textViewDate"
    android:layout_toRightOf="@+id/textView3"
    android:layout_toEndOf="@+id/textView3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#B0E2FF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEM INFORMATION"
        android:id="@+id/textViewMainTitle"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="10dp"
        android:singleLine="false"
        android:textColor="#ff000000" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewItemPhoto"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
         />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GVTitle"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:id="@+id/tvTitle"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTitle"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginLeft="15dp"
            android:textColor="#000000" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GVPrice"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:id="@+id/tvPrice"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPrice"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginLeft="15dp"
            android:textColor="#000000" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GVStore"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STORE"
            android:id="@+id/tvStore"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStore"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginLeft="15dp"
            android:textColor="#000000" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GVDate"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:id="@+id/tvDate"
            android:textStyle="bold"
            android:textSize="25dp"
            android:typeface="serif"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDate"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_marginLeft="15dp"
            android:textColor="#000000" />
    </GridLayout>

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/GVIcons"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageViewWishList2"
            android:src="@drawable/ic_list_black_24dp"
            android:focusableInTouchMode="false" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageViewDelete"
            android:focusableInTouchMode="false"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_gravity="right" />
    </GridLayout>

</LinearLayout>




