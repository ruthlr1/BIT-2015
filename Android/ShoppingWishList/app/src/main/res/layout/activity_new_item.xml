<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#B0E2FF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEW ITEM"
        android:id="@+id/textViewTitle"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginLeft="100dp"
        android:textColor="#ff000000" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewPhoto"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp" />

    <GridLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/GVTitleText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:id="@+id/textViewTitle2"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTitleText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </GridLayout>

    <GridLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/GVStoreText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STORE"
            android:id="@+id/textViewStore"
            android:textStyle="bold"
            android:textSize="25dp"
            android:typeface="serif"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/editStoreText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GVPriceText"
        android:layout_marginLeft="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE"
            android:id="@+id/textViewPrice"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:id="@+id/editPriceText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </GridLayout>

    <GridLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/GVIcons"
        android:layout_marginTop="80dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageViewSave"
            android:longClickable="false"
            android:src="@drawable/ic_save_black_24dp"
            android:layout_gravity="left" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageViewStartCamera"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_marginRight="40dp" />

    </GridLayout>

</LinearLayout>



