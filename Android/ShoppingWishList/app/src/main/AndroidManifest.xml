<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bit.ashokt1.shoppingwishlist" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllItems"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_all_items"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".NewItem"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_new_item"
            android:screenOrientation="portrait" >

        </activity>
        <activity
            android:name=".ItemInfo"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_item_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".About"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
